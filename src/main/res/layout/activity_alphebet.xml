<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".alphebet">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/backgraund_text"
        android:text="تعــرف على الحروف الأبجــدية :"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butnSortie3"
        android:layout_width="@dimen/dmn_60_dp"
        android:layout_height="@dimen/dmn_60_dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dmn_30_dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/iconback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_mots"
        android:layout_width="196dp"
        android:layout_height="267dp"
        android:layout_marginTop="@dimen/dmn_100_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_lettre"
        android:layout_width="89dp"
        android:layout_height="140dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#F01C1C"
        android:textSize="@dimen/dmn_60_sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_mots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toEndOf="@+id/image_mots"
        app:layout_constraintTop_toTopOf="@+id/image_mots"
        app:layout_constraintVertical_bias="0.464" />

    <Button
        android:id="@+id/btnretour"
        android:layout_width="@dimen/dmn_60_dp"
        android:layout_height="@dimen/dmn_60_dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="@dimen/dmn_30_dp"
        android:background="@drawable/icon_retour"
        app:layout_constraintBottom_toTopOf="@+id/butnSortie3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnaller"
        android:layout_width="@dimen/dmn_60_dp"
        android:layout_height="@dimen/dmn_60_dp"
        android:layout_marginEnd="@dimen/dmn_60_dp"
        android:layout_marginBottom="@dimen/dmn_30_dp"
        android:background="@drawable/icon_aller"
        app:layout_constraintBottom_toTopOf="@+id/butnSortie3"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
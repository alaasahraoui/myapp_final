<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bck"
    tools:context=".Activity_calcul">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="449dp"
        android:layout_height="112dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_resulta_text"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="@+id/btn3_choix"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dmn_120_dp"
        android:layout_marginTop="@dimen/dmn_60_dp"
        android:background="@drawable/back_ground_number"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#13DBC5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="@+id/btn1_choix"
        app:layout_constraintTop_toTopOf="@+id/text2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dmn_60_dp"
        android:layout_marginEnd="@dimen/dmn_30_dp"
        android:background="@drawable/back_ground_number"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#DD1616"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn3_choix"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toEndOf="@+id/text1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_oper"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="+"
        android:textColor="#00C853"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text2"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text2" />

    <TextView
        android:id="@+id/text_calcul"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dmn_60_dp"
        android:layout_marginStart="64dp"
        android:gravity="center"
        android:text="="
        android:textColor="#D50000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/text2"
        app:layout_constraintStart_toEndOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn1_choix"
        android:layout_width="@dimen/dmn_80_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_etudient"
        android:text="1"
        android:textColor="#1ECF67"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <Button
        android:id="@+id/btn2_choix"
        android:layout_width="@dimen/dmn_80_dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_module"
        android:text="3"
        android:textColor="#DD1616"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn1_choix"
        app:layout_constraintEnd_toStartOf="@+id/btn3_choix"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/btn1_choix"
        app:layout_constraintTop_toBottomOf="@+id/text_oper"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn3_choix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_etudient"
        android:text="2"
        android:textColor="#13DBC5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn2_choix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_calcul"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/backgraund_text"
        android:text="إختـــر الإجابة الصحيحة"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSorteClcul"
        android:layout_width="@dimen/dmn_60_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dmn_30_dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/iconback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResulta_time"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/background_resulta_text"
        android:gravity="center"
        android:textColor="#1ECF67"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="الـنتيجة :"
        android:textColor="#070707"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textResulta_time"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="@+id/textResulta_time"
        app:layout_constraintTop_toTopOf="@+id/textResulta_time" />
</androidx.constraintlayout.widget.ConstraintLayout>